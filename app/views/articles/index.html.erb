<div id="page-content">
    <h1 class="text-center mt-4">Listing all articles</h1>
    <div class="container">
        <% @articles.each do |article| %>
            <div class="row justify-content-md-center">
                <div class="col-8 mt-4">
                    <div class="card text-center shadow-lg mb-2 bg-white rounded">
                        <div class="card-header font-italic">
                            By Amritha
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-warning" %></h5>
                            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                            <a href="#" class="btn btn-warning">View</a>
                            <a href="#" class="btn btn-dark">Edit</a>
                            <a href="#" class="btn btn-danger">Delete</a>
                        </div>
                        <div class="card-footer text-muted">
                            <small>Create <%= time_ago_in_words(article.created_at) %> ago, 
                                edited <%= time_ago_in_words(article.updated_at)%> ago
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        <%end%>
    </div>
</div>
<p><%= link_to 'Create new article', new_article_path%></p>