<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow-lg p-3 mb-3 bg-warning rounded", local: true) do |f|%>
    <div class="form-group row">
        <%= f.label :name, "Category Name", class: "col-2 col-form-label text-dark" %><br>
        <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category" %>
        </div>
    </div>

    <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-dark btn-lg" %>
    </div>

<%end%>